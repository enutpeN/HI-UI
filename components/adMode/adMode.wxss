.mask{position:fixed; z-index:999; top:0; left:0; right:0; bottom:0; background-color:rgba(0,0,0,0.5);}
.position-center{ position:fixed; top:50%; left:50%; -webkit-transform:translate(-50%,-50%);}
.myfadeIn{opacity: 1;transition: opacity 0.5s ease;height:100%;width: 100%;}
.myfadeOut{opacity: 0;transition: opacity 0.5s ease;height: 0;width: 0;overflow: hidden;}
