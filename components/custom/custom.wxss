.hi-Custom{
  box-sizing: border-box;
  display: flex;
  align-items: center;
  padding-right: 220rpx;
  z-index: 10000;
  min-height: 0px;
  position: fixed;
  top: 0;
  width: 100%;
  /* color: #fff; */
}
.action {
	display: flex;
	align-items: center;
	height: 100%;
	justify-content: left;
	max-width: 100%;
  box-sizing:border-box;
}
.content {
	width: calc(100% - 440rpx);
  position: absolute;
	text-align: center;
	left: 0;
	right: 0;
	bottom: 0;
	top: 0;
	margin: auto;
	height: 60rpx;
	font-size: 32rpx;
	line-height: 60rpx;
	cursor: none;
	pointer-events: none;
	text-overflow: ellipsis;
	white-space: nowrap;
	overflow: hidden;
}
.border-custom {
	position: relative;
	background: rgba(0, 0, 0, 0.15);
	border-radius: 1000rpx;
	height: 30px;
  box-sizing: border-box;
}
.border-custom text {
	display: block;
	flex: 1;
	margin: auto !important;
	text-align: center;
	font-size: 34rpx;
}
