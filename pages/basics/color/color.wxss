.maru-item{
  width: 100rpx;
  height: 100rpx;
  /* background: #FF0000; */
  border-radius: 50%;
  margin: 20rpx 0;
  position: relative
}
.maru-item2{
  width: 180rpx;
  height: 100rpx;
  /* background: #FF0000; */
  border-radius: 10rpx;
  margin: 20rpx 0;
  position: relative
}

.maru-item::before {
	content: "";
	display: block;
	background: inherit;
	filter: blur(10rpx);
	position: absolute;
	width: 100%;
	height: 100%;
	top: 10rpx;
	left: 20rpx;
	z-index: 0;
	opacity: 0.4;
	transform-origin: 0 0;
	border-radius: inherit;
	transform: scale(1, 1);
}
