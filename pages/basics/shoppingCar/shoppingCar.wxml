<hi-custom isBack="{{true}}" bgColor="bg-gradual-pink">
  <view slot="backText">返回</view>
  <view slot="content" >购物车</view>
</hi-custom>
<view class="pd20">
  <view class="r-center-l-nw ">
    <view class="iconfont icon-yuanxingweixuanzhong  color-ccc mr20 "></view>
    <!-- <view></view> -->
    <image class="shopIcon" src="https://ss0.bdstatic.com/70cFvHSh_Q1YnxGkpoWK1HF6hhy/it/u=4210154917,2881117455&fm=26&gp=0.jpg"></image>
    <view class="ml20">天猫旗舰店</view>
    <view class="iconfont icon-danyou ft36"></view>
  </view>
  <view class="r-center-l-nw mt10" wx:for="{{list}}">
    <view class="iconfont icon-yuanxingweixuanzhong  color-ccc mr20  "></view>
    <image style="width:150rpx;height:150rpx;border-radius:5rpx;" src="{{item.image}}"></image>
    <view class="ml20 c-center-l-nw flex-1">
      <view> {{item.title}}</view>
      <view>规格：{{item.pro_name}}</view>
      <view class="r-center-b-nw w-100">
        <view class="color-f37"> ￥{{item.price}}</view>
        <view  class="r-center-b-nw ">
          <view class="calculatorBox" data-index="{{index}}" catchtap="minus">-</view>
          <input class="numbox" value="{{item.num}}"></input>
          <view class="calculatorBox"  data-index="{{index}}" catchtap="add">+</view>
        </view>
      </view>
    </view>
  </view>
</view>
<view class="r-center-b-nw bottomBox w-100">
  <view class="r-center-l-nw">
    <view class="iconfont icon-yuanxingweixuanzhong  color-ccc mr20 "></view>
    <view>全选</view>
  </view> 
  <view class="r-center-l-nw">
    <view class="mr10">合计:<text>￥0</text></view>
    <view class="submit">结算（0）</view>
  </view>
</view>
